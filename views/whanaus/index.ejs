<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>

    <h1>All Whanaus</h1>
    <div>
        <a href="/whanaus/new">Add Your Whanau!</a>
    </div>

    <% for (let whanau of whanaus){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (whanau.images.length) { %>
                    <img class="img-fluid" alt="" src="<%=whanau.images[0].url%>">
                    <% } else { %>
                        <img class="img-fluid" alt="" src="https://res.cloudinary.com/epikk/image/upload/v1638138891/Epikk/cecy3r07jhnndzbt2nbk.jpg">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=whanau.name%>
                        </h5>
                        <p class="card-text">
                            <%=whanau.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=whanau.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/whanaus/<%=whanau._id%>">View <%=whanau.name%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const whanaus = {features: <%- JSON.stringify(whanaus) %>};
        </script>
    <script src="/javascripts/clusterMap.js"></script>